<UserControl
    x:Class="WPFBase.Views.SMView.UserGroupView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:prism="http://prismlibrary.com/"
    d:DesignHeight="450"
    d:DesignWidth="800"
    FontFamily="微软雅黑"
    mc:Ignorable="d">

    <md:DialogHost>
        <md:DrawerHost IsLeftDrawerOpen="{Binding IsLeftDrawerOpen}">
            <md:DrawerHost.LeftDrawerContent>
                <DockPanel Width="300" LastChildFill="False">
                    <TextBlock
                        Padding="20,10"
                        DockPanel.Dock="Top"
                        FontSize="20"
                        FontWeight="Bold"
                        Text="添加用户组" />

                    <StackPanel
                        Margin="20"
                        DockPanel.Dock="Top"
                        Orientation="Horizontal">
                        <TextBlock VerticalAlignment="Center" Text="状态：" />

                        <ToggleButton
                            Width="60"
                            Height="30"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            DockPanel.Dock="Top"
                            IsChecked="{Binding CurrentGroup.Status}"
                            Style="{StaticResource MaterialDesignSwitchLightToggleButton}"
                            ToolTip="是否启用" />
                    </StackPanel>
                    <StackPanel
                        Margin="20,10"
                        DockPanel.Dock="Top"
                        Orientation="Horizontal">
                        <md:PackIcon
                            Margin="15,0,35,0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Kind="AccountMultiple" />
                        <TextBox
                            Width="200"
                            md:HintAssist.Hint="请输入用户组名称"
                            Style="{StaticResource MaterialDesignTextBox}"
                            Text="{Binding CurrentGroup.UserGroupName}" />
                    </StackPanel>
                    <StackPanel
                        Margin="10,10"
                        DockPanel.Dock="Top"
                        Orientation="Horizontal">

                        <TextBox
                            Width="270"
                            Height="200"
                            HorizontalAlignment="Right"
                            md:HintAssist.Hint="用户组说明"
                            BorderThickness="1"
                            Style="{StaticResource MaterialDesignTextBox}"
                            Text="{Binding CurrentGroup.Reamrk}" />
                    </StackPanel>


                    <Button
                        Margin="20,20"
                        HorizontalAlignment="Right"
                        Command="{Binding ExecuteCommand}"
                        CommandParameter="SaveGroup"
                        Content="确定"
                        DockPanel.Dock="Top" />

                </DockPanel>
            </md:DrawerHost.LeftDrawerContent>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="60" />
                    <RowDefinition />
                    <RowDefinition Height="60" />
                </Grid.RowDefinitions>

                <Button
                    Margin="10,0,15,0"
                    HorizontalAlignment="Left"
                    md:ButtonProgressAssist.IsIndeterminate="True"
                    md:ButtonProgressAssist.IsIndicatorVisible="True"
                    md:ButtonProgressAssist.Value="-1"
                    Command="{Binding ExecuteCommand}"
                    CommandParameter="AddGroup"
                    Content="+ 添加用户组"
                    IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
                    Style="{StaticResource MaterialDesignRaisedButton}" />

                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="240" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <ListBox
                        ItemsSource="{Binding GroupListDatas}"
                        SelectedItem="{Binding SelectedGroupItem}"
                        Style="{StaticResource MaterialDesignCardsListBox}">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="SelectionChanged">
                                <prism:InvokeCommandAction Command="{Binding ShowRoleCommand}" CommandParameter="{Binding SelectedGroupItem, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type ListBox}}}" />
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Height" Value="40" />
                                <Setter Property="Width" Value="240" />
                                <Setter Property="HorizontalAlignment" Value="Left" />
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="{x:Type ListBoxItem}">
                                            <Border
                                                x:Name="border"
                                                Margin="5"
                                                Background="WhiteSmoke"
                                                CornerRadius="10">
                                                <Grid>
                                                    <TextBlock
                                                        Margin="20,0"
                                                        HorizontalAlignment="Left"
                                                        VerticalAlignment="Center"
                                                        FontFamily="微软雅黑"
                                                        FontSize="16"
                                                        Text="{Binding UserGroupName}" />
                                                </Grid>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsSelected" Value="True">
                                                    <Setter TargetName="border" Property="Background" Value="{DynamicResource MaterialDesignSelection}" />
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListBox.ItemContainerStyle>
                    </ListBox>

                    <Border
                        Grid.Column="1"
                        BorderBrush="LightGray"
                        BorderThickness="1"
                        CornerRadius="20">
                        <Border.Effect>
                            <DropShadowEffect
                                BlurRadius="1"
                                Direction="0"
                                Opacity="0.3"
                                ShadowDepth="1"
                                Color="LightGray" />
                        </Border.Effect>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition Width="100" />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <StackPanel>
                                <TextBlock
                                    Margin="0,10"
                                    HorizontalAlignment="Center"
                                    FontSize="18"
                                    Text="{Binding SelectedGroupItem.UserGroupName}" />
                                <ListBox
                                    Grid.Column="0"
                                    Margin="10,0,10,0"
                                    ItemsSource="{Binding UserListDatasByGroup}"
                                    SelectedItem="{Binding SelectedUserGroupItem}"
                                    Style="{StaticResource MaterialDesignNavigationPrimaryListBox}">
                                    <i:Interaction.Triggers>
                                        <i:EventTrigger EventName="SelectionChanged">
                                            <prism:InvokeCommandAction Command="{Binding AddRoleCommand}" CommandParameter="{Binding SelectedUserGroupItem, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type ListBox}}}" />
                                        </i:EventTrigger>
                                    </i:Interaction.Triggers>
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding UserCode}" />
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </StackPanel>


                            <StackPanel
                                Grid.Column="1"
                                VerticalAlignment="Center"
                                Orientation="Vertical">
                                <Button Margin="3,10" Command="{Binding AddUserCommand}">
                                    <md:PackIcon Kind="ChevronLeftCircle" />
                                </Button>
                                <Button Margin="3,10" Command="{Binding RemoveUserCommand}">
                                    <md:PackIcon Kind="ChevronRightCircle" />
                                </Button>
                            </StackPanel>

                            <DockPanel Grid.Column="2">
                                <StackPanel
                                    HorizontalAlignment="Center"
                                    DockPanel.Dock="Top"
                                    Orientation="Horizontal">
                                    <TextBlock
                                        Margin="10,10"
                                        FontSize="18"
                                        Text="用户列表" />
                                    <hc:SearchBar
                                        Width="200"
                                        Height="30"
                                        Margin="2,0,10,0"
                                        VerticalContentAlignment="Center"
                                        hc:InfoElement.Placeholder="输入姓名查找"
                                        hc:InfoElement.ShowClearButton="True"
                                        Command="{Binding ExecuteCommand}"
                                        CommandParameter="Search"
                                        Style="{StaticResource SearchBarPlus}"
                                        Text="{Binding SearchText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                </StackPanel>

                                <ListBox
                                    Margin="10,0,10,0"
                                    ItemsSource="{Binding UserListDatas}"
                                    SelectedItem="{Binding SelectedUserItem}"
                                    Style="{StaticResource MaterialDesignNavigationPrimaryListBox}">
                                    <i:Interaction.Triggers>
                                        <i:EventTrigger EventName="SelectionChanged">
                                            <prism:InvokeCommandAction Command="{Binding AddRoleCommand}" CommandParameter="{Binding SelectedUserItem, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type ListBox}}}" />
                                        </i:EventTrigger>
                                    </i:Interaction.Triggers>
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding UserName}" />
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </DockPanel>
                        </Grid>
                    </Border>

                    <!--<DataGrid
                        x:Name="dgUserGroupList"
                        Grid.Column="1"
                        BorderThickness="1"
                        ItemsSource="{Binding WeighOperatorDtos}"
                        Style="{StaticResource dgStyle}">
