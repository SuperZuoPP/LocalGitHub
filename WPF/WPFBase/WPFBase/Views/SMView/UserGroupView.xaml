<UserControl x:Class="WPFBase.Views.SMView.UserGroupView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFBase.Views.SMView"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:prsim="http://prismlibrary.com/"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition/> 
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>

        <Border Background="White" CornerRadius="5" Margin="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="300"/>
                    <ColumnDefinition/> 
                </Grid.ColumnDefinitions>
                <TextBox Margin="10,0" Width="200" Style="{StaticResource SearchTextBoxStyle}"></TextBox>

                <Button Grid.Column="1"  
    Margin="2,0"  HorizontalAlignment="Right" 
    md:ButtonProgressAssist.IsIndeterminate="True"
    md:ButtonProgressAssist.IsIndicatorVisible="True"
    md:ButtonProgressAssist.Value="-1"
    Content="+ 添加用户"
    IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
    Style="{StaticResource MaterialDesignRaisedButton}"
                         Command="{Binding ExecuteCommand}"
                CommandParameter="UserCreateView"/>
                <!--<Button Grid.Column="1"  Height="30"
                         Width="30"  Margin="10,0,0,0" HorizontalAlignment="Right" 
                  md:ButtonProgressAssist.IsIndeterminate="True"
                  md:ButtonProgressAssist.IsIndicatorVisible="True"
                  md:ButtonProgressAssist.Value="-1"
                  Content="{md:PackIcon Add}"
                  IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
                  Style="{StaticResource MaterialDesignFloatingActionButton}"
                Command="{Binding ExecuteCommand}"
                CommandParameter="UserCreateView"/>-->
            </Grid>
        </Border>


        <DataGrid Grid.Row="1" x:Name="dgUserGroupList" Style="{StaticResource dgStyle}" ItemsSource="{Binding DataGridList}"  
                BorderThickness="1">
            <DataGrid.Columns>
                <!-- 全选列 -->
                <DataGridTemplateColumn Header="全选">
                    <DataGridTemplateColumn.HeaderTemplate>
                        <DataTemplate>
                            <CheckBox x:Name="chkSelectAll" IsChecked="{Binding IsAllSelected, Mode=TwoWay, RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.HeaderTemplate>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <CheckBox IsChecked="{Binding IsSelected, Mode=TwoWay}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="编号"  IsReadOnly="True" Width="0.8*" ElementStyle="{StaticResource textColStyleCenter}"  Binding="{Binding ID}"/>
                <DataGridTextColumn Header="用户名"  IsReadOnly="True" Width="0.8*" ElementStyle="{StaticResource textColStyleCenter}"  Binding="{Binding Name}"/>
                <DataGridTextColumn Header="性别"  IsReadOnly="True" Width="0.8*" ElementStyle="{StaticResource textColStyleCenter}"  Binding="{Binding Sex}"/>

                <DataGridTemplateColumn  Header="是否启用" Width="1.0*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <CheckBox IsChecked="True" Style="{StaticResource chkColStyle}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="备注"  ElementStyle="{StaticResource textColStyleLeft}" IsReadOnly="True" Width="3*" Binding="{Binding Remark}"/>
                <DataGridTemplateColumn  Header="操作" Width="150">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <Button  Style="{StaticResource ButtonInfo}" Margin="0,0,10,0"  Command="{Binding EditItemCmd,
                                RelativeSource={RelativeSource Mode=FindAncestor,AncestorType={x:Type UserControl}}}"
                                    CommandParameter="{Binding Role}">
                                    <md:PackIcon Kind="AccountEdit" />
                                </Button>
                                <Button  Style="{StaticResource ButtonDanger}" Margin="0,0,10,0"  Command="{Binding DeleteItemCmd,
                                RelativeSource={RelativeSource Mode=FindAncestor,AncestorType={x:Type UserControl}}}"
                                    CommandParameter="{Binding Role}">
                                    <md:PackIcon Kind="Delete" />
                                </Button>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

         
        
        <hc:Pagination  Grid.Row="2"  HorizontalAlignment="Center" VerticalAlignment="Center" MaxPageCount="10" PageIndex="5" IsJumpEnabled="True"/>

    </Grid>
</UserControl>
