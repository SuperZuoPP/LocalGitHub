                        VerticalAlignment="Center"
                        md:TextFieldAssist.PrefixText="车号 "
                        IsReadOnly="True"
                        Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                        Text="..." />
                </StackPanel>
                <StackPanel DockPanel.Dock="Top" Orientation="Horizontal">
