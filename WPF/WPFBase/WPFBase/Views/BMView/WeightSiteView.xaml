                            <md:PackIcon
                                Width="40"
                                Height="40"
                                Margin="5,5"
                                VerticalAlignment="Center"
                                Foreground="GreenYellow"
                                Kind="CheckboxBlankCircle" />
                            <TextBlock
                                Width="350"
                                Height="60"
                                Background="Black"
                                FontFamily="Consolas"
                                FontSize="50"
                                Foreground="GreenYellow"
                                Text="3805"
                                TextAlignment="Right" />
                            <TextBlock
                                Width="74"
                                Height="60"
                                Margin="2,0"
                                Background="Black"
                                FontFamily="Consolas"
                                FontSize="50"
                                Foreground="GreenYellow"
                                Text="KG"
                                TextAlignment="Center" />
                        </StackPanel>
                    </Border>
                    <StackPanel
                        Grid.Row="1"
                        HorizontalAlignment="Center"
                        Orientation="Horizontal">
                        <Image
                            Width="60"
                            Height="60"
                            Source="/Views/BMView/gate_init.png" />
                        <Image
                            Width="60"
                            Height="60"
                            Source="/Views/BMView/traffic_init.png" />
                        <Image
                            Width="60"
                            Height="60"
                            Source="/Views/BMView/printer_init.png" />
                        <Image
                            Width="60"
                            Height="60"
                            Source="/Views/BMView/printer_init.png" />
                        <Image
